body {

	background: #F2F2F2;
	overflow: hidden;

}

.CodeMirror {

	font: 13px/16px 'Consolas', monospace;

}

.CodeMirror-gutters {

	padding-right: 5px;
	border: none;

}

#user {
	
	img {

		width: 20px;
		height: 20px;

	}

}

#application {

	position: absolute;
	top: 30px;
	right: 0;
	bottom: 0;
	left: 0;

}

#terse {

	display: inline-block;
	padding: 5px;
	font-size: 18px;
	font-weight: bold;

}

#toolbar {

	position: absolute;
	top: 0;
	right: 0;
	padding: 5px;

	> ul {

		list-style: none;
		margin: 0;
		padding: 0;

		> li {

			display: inline-block;
			margin: 0;
			padding: 0;

		}

	}

}

#group {

	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;

}

#html,
#css,
#js,
#result {

	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;

	div.module {

		position: absolute;
		top: 3px;
		right: 3px;
		bottom: 3px;
		left: 3px;
		box-shadow: 0 3px 4px rgba( 0, 0, 0, 0.05 );

		div.toolbar {

			height: 23px;
			padding: 0 10px;
			border-top: rgb( 255, 255, 255 ) 1px solid;
			border-bottom: rgb( 230, 230, 230 ) 1px solid;
			background: #f7f7f7;

		}

		h3 {

			margin: 0;
			font-size: 11px;
			line-height: 25px;
			text-transform: uppercase;

		}

	}

	div.CodeMirror {

		position: absolute;
		top: 25px;
		right: 0;
		bottom: 0;
		left: 0;
		height: auto;
		background: rgb( 255, 255, 255 );
		cursor: text;

	}

}

#html {

	right: 50%;
	bottom: 50%;

	div.module { left: 6px; }

}

#css {

	left: 50%;
	bottom: 50%;

	div.module { right: 6px; }

}

#js {

	top: 50%;
	right: 50%;

	div.module {
		bottom: 6px;
		left: 6px;
	}

}

#result {

	top: 50%;
	left: 50%;

	div.module {
		right: 6px;
		bottom: 0;
		margin-bottom: 31px;
	}

	iframe {

		position: absolute;
		display: block;
		width: 100%;
		height: 100%;
		border: none;
		box-shadow: 0 3px 4px rgba( 0, 0, 0, 0.05 );

	}

}