body {

	background: #F2F2F2;
	overflow: hidden;

}

.CodeMirror {

	font: 13px/16px 'Consolas', monospace;

}

.CodeMirror-gutters {

	padding-right: 5px;
	border: none;

}

#user {
	
	img {

		width: 20px;
		height: 20px;

	}

}

#terse {

	display: inline-block;
	padding: 5px;
	font-family: 'Signika', sans-serif;
	font-size: 16px;
	font-weight: bold;
	text-transform: uppercase;
	text-decoration: none;

}

#identity {

	float: right;

}

#metadata {

	span.user {

		img.avatar {

			width: 20px;
			height: 20px;

		}

	}

}

#toolbar {

	position: absolute;
	top: 0;
	right: 0;
	padding: 5px;

	> ul {

		list-style: none;
		margin: 0;
		padding: 0;

		> li {

			display: inline-block;
			margin: 0;
			padding: 0;

		}

	}

}

#group {

	position: absolute;
	top: 38px;
	right: 0;
	bottom: 0;
	left: 0;
	background: #fcfcfc;

}

div.CodeMirror {

	position: absolute;
	top: 43px;
	right: 0;
	bottom: 0;
	left: 0;
	height: auto;
	background: rgb( 255, 255, 255 );
	cursor: text;

}

#files {

	position: absolute;
	top: 30px;
	right: 50%;
	bottom: 0;
	left: 0;
	padding-top: 5px;
	background: #fcfcfc;

	ul.nav.nav-tabs {
		margin: 0;
	}

	div.btn-toolbar {
		margin: 0;
	}

}

#result {

	position: absolute;
	top: 30px;
	right: 0;
	bottom: 0;
	left: 50%;
	margin-left: 5px;

	div.module {
		right: 6px;
		bottom: 0;
		margin-bottom: 31px;
	}

	iframe {

		position: absolute;
		display: block;
		width: 100%;
		height: 100%;
		border: none;
		box-shadow: 0 3px 4px rgba( 0, 0, 0, 0.05 );
		background: rgb( 255, 255, 255 );

	}

}